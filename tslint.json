{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-config-airbnb"],
  "jsRules": {},
  
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  
  "rules": {
    "align": [true, "statements", "members", "elements"],
    "no-console": [false],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "semicolon": true,
    "ter-arrow-parens": [true, "as-needed", { "requireForBlockBody": false }],
    "lines-between-class-members": true,
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^import |^export {(.*?)}",
        "check-strings": true,
        "check-regex": true
      }
    ],
    "space-before-function-paren": [false],
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": true
  },
  "rulesDirectory": ["node_modules/tslint-lines-between-class-members"]
}
